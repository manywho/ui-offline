{
    "name": "ui-offline",
    "version": "2.14.0",
    "description": "ManyWho offline services and components",
    "author": "ManyWho",
    "repository": {
        "type": "git",
        "url": "https://github.com/manywho/ui-offline.git"
    },
    "scripts": {
        "docs": "typedoc js --out docs --ignoreCompilerErrors --mode modules & start docs/index.html",
        "start": "webpack --config webpack.development.config.js --env.build=../ui-html5/build",
        "dist": "webpack --config webpack.production.config.js",
        "offline": "node ./js/metaData.js",
        "precommit": "lint-staged",
        "test": "jest",
        "lint": "tslint --project"
    },
    "lint-staged": {
        "*.ts": "tslint",
        "*.tsx": [
            "tslint",
            "git add"
        ]
    },
    "devDependencies": {
        "@types/enzyme": "^3.1.11",
        "@types/jest": "^23.1.4",
        "@types/react": "^0.14.57",
        "clean-webpack-plugin": "^0.1.19",
        "css-loader": "^0.28.11",
        "del": "^1.1.1",
        "enzyme": "^3.3.0",
        "enzyme-adapter-react-16": "^1.1.1",
        "fs-promise": "^2.0.2",
        "husky": "^0.14.3",
        "identity-obj-proxy": "^3.0.0",
        "jest": "^23.2.0",
        "jest-junit-reporter": "^1.1.0",
        "less": "^3.0.1",
        "less-loader": "^4.1.0",
        "lint-staged": "^7.0.4",
        "localforage": "^1.5.6",
        "react-addons-test-utils": "^15.6.2",
        "react-redux": "^5.0.7",
        "redux": "^4.0.0",
        "redux-thunk": "^2.3.0",
        "request-promise": "^4.1.1",
        "run-sequence": "^1.2.1",
        "script-loader": "^0.7.0",
        "style-loader": "^0.20.3",
        "ts-jest": "^23.0.0",
        "ts-loader": "^4.4.2",
        "tslint": "5.8.0",
        "tslint-config-airbnb": "5.9.2",
        "tslint-loader": "3.6.0",
        "typedoc": "^0.11.1",
        "typescript": "^2.3.2",
        "uglifyjs-webpack-plugin": "^2.1.3",
        "webpack": "^4.0.0",
        "webpack-bundle-analyzer": "^2.11.1",
        "webpack-cli": "^3.1.0",
        "worker-loader": "^2.0.0",
        "yargs": "^2.3.0",
        "compression-webpack-plugin": "2.0.0"
    },
    "jest": {
        "collectCoverage": true,
        "collectCoverageFrom": [
            "**/js/components/*.{ts,tsx}",
            "**/js/services/*.{ts,tsx}",
            "**/js/services/pageconditions/*.{ts,tsx}",
            "**/js/services/macros/*.{ts,tsx}",
            "**/js/services/cache/*.{ts,tsx}",
            "**/js/models/*.{ts,tsx}"
        ],
        "setupFiles": [
            "<rootDir>/test-setup.js"
        ],
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "setupTestFrameworkScriptFile": "<rootDir>/setup-tests-globals.js",
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json"
        ],
        "moduleNameMapper": {
            "\\.(css|less)$": "identity-obj-proxy",
            "worker.js": "<rootDir>/__mocks__/workerMock.js"
        },
        "testResultsProcessor": "./node_modules/jest-junit-reporter"
    },
    "dependencies": {
        "ramda": "^0.25.0",
        "react": "^16.3.1",
        "react-dom": "^16.3.1",
        "tslint-config-airbnb": "^5.8.0",
        "write-file": "1.0.0"
    }
}
